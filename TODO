1. sudo nano /etc/rc.local or /etc/sysctl.conf

	ifconfig enp3s0 txqueuelen 1875
	ifconfig wlp2s0 txqueuelen 1875

	#sysctl -w net.core.rmem_max=11534336
	#sysctl -w net.core.wmem_max=11534336
	#sysctl -w net.ipv4.conf.default.forwarding=1
	#sysctl -w net.ipv4.tcp_rmem='10240 87380 11534336'
	#sysctl -w net.ipv4.tcp_wmem='10240 87380 11534336'
	#sysctl -w net.ipv4.tcp_timestamps=0
	#sysctl -w net.ipv4.tcp_window_scaling=1
	 sysctl -w net.ipv4.tcp_sack=0
	 sysctl -w net.ipv4.tcp_no_metrics_save=1
	#sysctl -w net.core.netdev_max_backlog=5000
	 sysctl -w net.ipv6.conf.all.disable_ipv6=1

	 sysctl -w vm.swappiness=0

	 swapoff -a or # ...swap... in /etc/fstab or 'sudo systemctl disable  dphys-swapfile' in Raspbian

2. sudo nano /etc/rc.local

	   mpd)		taskset -cp 0 $proc_nr
			chrt -v -ip 0 $proc_nr
			renice  18 -p $proc_nr ;;
	   io)		taskset -cp 0 $proc_nr
			renice   4 -p $proc_nr ;;
	   player)	taskset -cp 1 $proc_nr
			renice   2 -p $proc_nr ;;
	   decoder)	taskset -cp 2 $proc_nr
			renice   1 -p $proc_nr ;;
	   output)	taskset -cp 3 $proc_nr
			chrt -v -op 0 $proc_nr ;;

3. Polipo

	sudo nano /etc/polipo/config
		... # No chunkHighMark

	sudo nano /etc/rc.local
		grep -qs chunkHighMark /etc/polipo/config || sed -i "\$achunkHighMark = $(($(grep MemTotal /proc/meminfo | awk '{print $2}')*256))" /etc/polipo/config
		chrt -i 0 taskset -ac 0 nice -n 18 polipo >/dev/null 2>&1 &

	nano /etc/environment
		http_proxy="http://127.0.0.1:8123/"

	Remove 'chunkHighMark = ...' line in /etc/polipo/config before making image

4. sudo nano /usr/share/alsa/alsa.conf

	pcm.sound.subdevice 0

5. sudo nano /etc/fstab

	 ramfs /tmp       tmpfs nosuid,nodev,noatime,nodiratime 0 0
	#tmpfs /var/cache tmpfs nosuid,nodev,noatime,nodiratime 0 0
	 ramfs /var/log   tmpfs nosuid,nodev,noatime,nodiratime 0 0

	or

	rm -rf /var/cache && mkdir -p /run/var/cache && ln -s /run/var/cache /var
	rm -rf /var/log   && mkdir -p /run/var/log   && ln -s /run/var/log   /var
	rm -rf /tmp       && mkdir -p /run/tmp       && ln -s /run/tmp       /
	sudo nano /etc/fstab
			 #ramfs /tmp       tmpfs nosuid,nodev,noatime,nodiratime 0 0
			#tmpfs /var/cache tmpfs nosuid,nodev,noatime,nodiratime 0 0
			#ramfs /var/log   tmpfs nosuid,nodev,noatime,nodiratime 0 0
	sudo nano /etc/rc.local
		mkdir -p /run/var/cache /run/var/log /run/tmp

6. sudo nano /etc/mpd.conf

	device "pcm.sound"

7. ALSA

$ sudo find /usr/lib/arm-linux-gnueabihf/alsa-lib/ -name '*.so' -exec sudo rename -v 's/\.so$/.so.sav/' '{}' \;
$ sudo find /usr/share/alsa/ -name '*.alisp' -exec sudo rename -v 's/\.alisp$/.alisp.sav/' '{}' \;
