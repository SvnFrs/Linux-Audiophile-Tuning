1. sudo nano /etc/rc.local

if ! grep -qs chunkHighMark /etc/polipo/config; then
 polipo_mem=$(($(grep MemTotal /proc/meminfo | awk '{print $2}')*256))
 [ $polipo_mem -gt 536870912 ] && polipo_mem=536870912
 sed -i "\$achunkHighMark = $polipo_mem" /etc/polipo/config
fi

2. Make voyage linux rw

	# nano /etc/init.d/voyage-util
		#echo -n "Remounting / as read-only ... "
		#/usr/local/sbin/remountro
		#echo "Done."
	# nano /etc/rc.local
		remountro
		exit 0

3. sudo nano /etc/mpd.conf

	buffer_before_play      "13.0445%"

4. sudo rm -rf /usr/share/polipo/www

5. sudo nano /usr/share/alsa/alsa.conf

	#pcm.sound.device 0
