1. sudo nano /etc/sysctl.conf

	kernel.sched_rt_runtime_us = 504487	# default  950000
	kernel.sched_rt_period_us  = 999796	# default 1000000

2. sudo nano /etc/rc.local

	pgr_mpd=$(pgrep -x mpd)

	 taskset -pc 0 $pgr_mpd
	 renice   3 -p $pgr_mpd

	...

	mpd)		taskset -cp 0 $proc_nr
			chrt -v -ip 0 $proc_nr
			renice  18 -p $proc_nr ;;
	io)		taskset -cp 0 $proc_nr
			renice   4 -p $proc_nr ;;
	player)		taskset -cp 2 $proc_nr
			renice   1 -p $proc_nr ;;
	decoder)	taskset -cp 1 $proc_nr
			renice   2 -p $proc_nr ;;
	output)		taskset -cp 3 $proc_nr
			chrt -v -op 0 $proc_nr ;;

3. sudo nano /etc/mpd.conf

	 period_time		"0"		# in ALSA
	 buffer_time		"0"		# in ALSA
	#buffer_before_play	"...%"
