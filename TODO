1. sudo nano /usr/share/alsa/alsa.conf
   	pcm.hw.type hw
	pcm.hw.card 0
	pcm.hw.device 0
	pcm.hw.subdevice 0
	#pcm.hw.sync_ptr_ioctl 1
	#pcm.hw.nonblock 0

	ctl.hw.type hw
	ctl.hw.card 0
	
	pcm.default pcm.shm
	ctl.default ctl.shm
	
	#defaults.pcm.nonblock 0
	#defaults.pcm.compat 1
	#defaults.pcm.minperiodtime 0 # 5000 # in us

   sudo nano /etc/mpd.conf
	audio_output {
	device			"pcm.hw"
	auto_resample		"no"
	auto_channels		"no"
	auto_format		"no"
	mixer_type		"none"
	#mixer_device		"ctl.hw"
	#mixer_control		"XMOS Clock Selector"
	replay_gain_handler	"mixer"
	always_on               "yes"
	}
	mixer_type		"disabled"

2. sudo nano /usr/share/alsa/alsa.conf
   	pcm.shm.type hw
	pcm.shm.card 0
	pcm.shm.device 0
	pcm.shm.subdevice -1
	#pcm.shm.sync_ptr_ioctl 1
	#pcm.shm.nonblock 0

	ctl.shm.type hw
	ctl.shm.card 0
	
	pcm.default pcm.shm
	ctl.default ctl.shm
	
	#defaults.pcm.nonblock 0
	#defaults.pcm.compat 1
	#defaults.pcm.minperiodtime 0 # 5000 # in us

   sudo nano /etc/mpd.conf
	audio_output {
	device			"shm"
	#auto_resample		"no"
	#auto_channels		"no"
	#auto_format		"no"
	mixer_type		"none"
	#mixer_device		"ctl.hw"
	#mixer_control		"XMOS Clock Selector"
	replay_gain_handler	"mixer"
	always_on               "yes"
	}
	#mixer_type		"disabled"
