1. sudo nano /etc/rc.local

	for pid in $(ps -eo pid,comm | awk '$2 !~ /mpd/ && $2 !~ /systemd/ {print $1}') ; do
	 taskset -acp 0 $pid | true
	done

	 taskset -pc 0	$pgr_mpd
	#renice -1 -p	$pgr_mpd

	   mpd)		taskset -cp 0     $proc_nr
			renice -1 -p      $proc_nr ;;
	   io)		taskset -cp 0     $proc_nr
			renice 19 -p      $proc_nr ;;
	   player)	taskset -cp 1     $proc_nr
			renice -2 -p      $proc_nr ;;
	   decoder)	taskset -cp 2     $proc_nr
			renice -3 -p      $proc_nr ;;
	   output)	taskset -cp 3     $proc_nr
			renice -6 -p      $proc_nr
			chrt -v -op 0     $proc_nr ;;
