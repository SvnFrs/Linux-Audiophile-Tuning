01. ALSA library for Sylphid

	# wget -P /etc/ https://github.com/parkmino/audiophile/raw/master/artik710/libasound.so.2.0.0.{min,mix,plug}_1.2.3.1.dev.shm
	# mv /etc/libasound.so.2.0.0.min_1.2.3.1.dev.shm  /etc/libasound.so.2.0.0.min.dev.shm
	# mv /etc/libasound.so.2.0.0.mix_1.2.3.1.dev.shm  /etc/libasound.so.2.0.0.mix.dev.shm
	# mv /etc/libasound.so.2.0.0.plug_1.2.3.1.dev.shm /etc/libasound.so.2.0.0.plug.dev.shm
	# sed -i 's/libasound.so.2.0.0.min /libasound.so.2.0.0.min.dev.shm /; s/libasound.so.2.0.0.mix /libasound.so.2.0.0.mix.dev.shm /; s/libasound.so.2.0.0.plug /libasound.so.2.0.0.plug.dev.shm /; /^ln.*alsa.conf/s/^/#/' /etc/rc.local

02. ALSA conf

	$ sudo rm /usr/share/alsa/alsa.conf
	$ sudo sed -i 's/pcm.hw.*sub/pcm.hw {  type hw  card 0  device 0 sub/' /usr/share/alsa/alsa.conf.min
	$ sudo sed -i 's/pcm.hw.*args/pcm.hw {  @args/; s/^type hw.*sub/type hw  card $CARD  device $DEV sub/' /usr/share/alsa/alsa.conf.{mix,plug}

	$ sudo nano /usr/share/alsa/alsa.conf.{min,mix,plug}
		pcm.hw {  type hw  card 0  device 0 subdevice 0}
		pcm.hw {  @args[CARD DEV SUBDEV]
		@args.CARD{type string default{@func getenv vars[ALSA_PCM_CARD ALSA_CARD]defaul>
		@args.DEV{type integer default{@func igetenv vars[ALSA_PCM_DEVICE]default{@func>
		@args.SUBDEV{type integer default{@func refer name defaults.pcm.subdevice}}
		type hw  card $CARD  device $DEV subdevice $SUBDEV

03. Shell redirection

	&>/dev/null 0</dev/null[=>] &>/dev/null</dev/null

	# sed -i 's/\&>\/dev\/null 0<\/dev\/null/ \&>\/dev\/null<\/dev\/null/g' /etc/rc.local /opt/RoonBridge/Bridge/RoonBridge

04. MPD audio buffer
	$ sudo nano /etc/mpd.conf.sav
		audio_buffer_size "3684"
		buffer_before_play "9.9999039749999%"

	$ sudo sed -i 's/0.*%/03974999%/' /etc/mpd.conf.sav

05. hdparm

	$ sudo nano /etc/hdparm.conf
		read_ahead_sect = 2048
	$ sudo hdparm -a2048 /dev/sda

06. Tune Kernel Parameters

	$ sudo nano /etc/sysctl.conf
		kernel.sched_min_granularity_ns = 230002
		kernel.sched_wakeup_granularity_ns = 388321
		kernel.sched_latency_ns = 1394090
		kernel.sched_migration_cost_ns = 4899032
		net.ipv4.tcp_rmem = 4613 88283 3345702
		net.ipv4.tcp_wmem = 4547 89932 3455682

	$ sudo sed -i 's/229978/230002/g; s/388287/388321/g; s/1394065/1394090/g; s/4899005/4899032/g; s/4604 88254 3345671/4613 88283 3345702/g; s/4528 89899 3455599/4547 89932 3455682/g' /etc/sysctl.conf

07. More CPU Affinities

