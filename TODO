1. sudo nano /etc/rc.local
	if [ "$(nproc --all)" = "4" ]; then
	 sleep 5
	 taskset -apc 0 `pgrep upmpdcli`
	 MPD_PID=`pgrep -F /run/mpd/pid`
	  if [ "$(($(chrt -ap "$MPD_PID" | wc -l)/2))" != "5" ]; then
	  sleep 5
	  fi
	 taskset -acp 1 "$MPD_PID"
	 taskset -pc  0 $(pstree -np "$MPD_PID" | grep io      | grep -o '[0-9]*' | tail -n1)
	 taskset -pc  3 $(pstree -np "$MPD_PID" | grep player  | grep -o '[0-9]*')
	 taskset -pc  2 $(pstree -np "$MPD_PID" | grep decoder | grep -o '[0-9]*')
	 taskset -pc  3 $(pstree -np "$MPD_PID" | grep output  | grep -o '[0-9]*')
	fi

2. nano /etc/rc.local in Armbian
	cp ./hub-ctrl /home/orangepi/
	./hub-ctrl -h 0 -P 1 -p 0
	...
	nano /etc/rc.local
		/home/orangepi/hub-ctrl -h 0 -P 1 -p 0
		...

3. Edit boot parameters in Armbian
	nano /boot/boot.cmd
		(consoleblank=0 elevator=noop) selinux=0
	mv /boot/boot.scr /boot/boot.scr.sav
	mkimage -C none -A arm -T script -d /boot/boot.cmd /boot/boot.scr

4. Add hub-ctrl logic
	### Turn off USBs
	if lsusb | grep -q 0424:9514; then
	 /home/pi/hub-ctrl -h 0 -P 5 -p 0
	 /home/pi/hub-ctrl -h 0 -P 4 -p 0
	fi
	#/home/pi/hub-ctrl -h 0 -P 2 -p 0 # Power off
