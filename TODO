1. sudo nano /etc/mpd.conf

	zeroconf_enabled	"no"
	always_on		"yes"

	#audio_buffer_size
	#buffer_before_play

	audio_buffer_size	"3584"
	buffer_before_play	"6%"

2. sudo nano /etc/rc.local

	taskset -pc 1 $pgr_mpd

	   mpd)		taskset -cp 1	$proc_nr
			renice -1 -p	$proc_nr ;;
	   io)		taskset -cp 2	$proc_nr ;;
			#renice +1 -p	$proc_nr ;;
	   player)	taskset -cp 1	$proc_nr
			renice -2 -p	$proc_nr ;;
	   decoder)	taskset -cp 3	$proc_nr
			renice -3 -p	$proc_nr ;;
	   output)	taskset -cp 3	$proc_nr
			renice -4 -p	$proc_nr
			chrt -op 0	$proc_nr ;;

	taskset -ac 1 nice -1 upmpdcli -c /etc/upmpdcli.conf &
	taskset -ac 2 /usr/bin/polipo &