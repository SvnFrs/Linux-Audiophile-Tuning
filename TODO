	#sysctl -w net.core.netdev_max_backlog=5000
	 sysctl -w net.ipv6.conf.all.disable_ipv6=1

	 sysctl -w vm.swappiness=0

	 swapoff -a

2. sudo nano /etc/rc.local

	   mpd)		taskset -cp 0 $proc_nr
			chrt -v -ip 0 $proc_nr
			renice  18 -p $proc_nr ;;
	   io)		taskset -cp 0 $proc_nr
			renice   4 -p $proc_nr ;;
	   player)	taskset -cp 1 $proc_nr
			renice   2 -p $proc_nr ;;
	   decoder)	taskset -cp 2 $proc_nr
			renice   1 -p $proc_nr ;;
	   output)	taskset -cp 3 $proc_nr
			chrt -v -op 0 $proc_nr ;;

3. Polipo

	sudo nano /etc/rc.local

		[ $(grep MemTotal /proc/meminfo | awk '{print $2}') -ge 750000 ] && chrt -i 0 taskset -ac 0 nice -n 18 polipo >/dev/null 2>&1 &
		#export http_proxy="http://127.0.0.1:8123/"

	nano ~/.bashrc

		[ $(grep MemTotal /proc/meminfo | awk '{print $2}') -ge 750000 ] && export http_proxy="http://127.0.0.1:8123/"