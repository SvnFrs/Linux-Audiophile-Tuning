$ sudo ln -sf /dev/shm/alsa.conf /usr/share/alsa/alsa.conf
$ sudo cp /etc/mpd.conf.sav /dev/shm/mpd.conf && pkill mpd && sleep 1 && mpd-bg
$ mpc listall | grep -m1 노력 | mpc add && mpc play $(mpc playlist | wc -l)

1. sudo nano /usr/share/alsa/alsa.conf.sav
	pcm.0.type=hw,pcm.0.card=0,pcm.0.device=0,pcm.0.subdevice=0,ctl.1.type=hw,ctl.1.card=9
	pcm.0.type=hw,pcm.0.card=0,pcm.0.device=0,pcm.0.subdevice=0,pcm.default=pcm.0,ctl.1.type=hw,ctl.1.card=9,ctl.default=ctl.1	# LibreELEC
   sudo nano /etc/mpd.conf.sav
	 device "pcm.0"
	 mixer_device "ctl.1"
	#always_on "yes"
	 buffer_before_play "9.%"
   sudo nano /etc/sysctl.conf
	#kernel.sched_min_granularity_ns = 229982		# 229982
	 kernel.sched_wakeup_granularity_ns = 388316		# 388324
	 kernel.sched_latency_ns = 1393339			# 1393333
	#kernel.sched_migration_cost_ns = 4899002		# 4899002
	#kernel.sched_time_avg = 6286				# 6286

2. sudo nano /usr/shar/alsa/alsa.conf.sav

	pcm.0 { type hw card 0 device 0 subdevice 0 nonblock 1 }
	pcm { default pcm.0 } pcm.0 { type hw card 0 device 0 subdevice 0 nonblock 1 } ctl { default ctl.1 } # LibreELEC

   sudo nano /etc/mpd.conf.sav
	 buffer_before_play "9.%"
   sudo nano /etc/sysctl.conf
	#kernel.sched_min_granularity_ns = 229982		# 229982
	 kernel.sched_wakeup_granularity_ns = 388312		# 388324
	 kernel.sched_latency_ns = 1393339			# 1393333
	#kernel.sched_migration_cost_ns = 4899002		# 4899002
	#kernel.sched_time_avg = 6286				# 6286

3. sudo nano /etc/rc.local

	chmod -w /lib/systemd/systemd /etc/rc.local /dev/shm/alsa.conf /dev/shm/libasound.so.2.0.0 /dev/shm/mpd /dev/shm/mpd.conf /dev/shm/upmpdcli /dev/shm/upmpdcli.conf
	chomd -R -w /usr/lib/

	sync
	sleep 1
	mount -o remount,ro /
	#mount -o remount,rw,noatime /
