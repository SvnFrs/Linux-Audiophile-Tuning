   sudo nano /etc/mpd.conf.sav
	input {
	 plugin  "file"
	 enabled "no"
	}
	Replace blank lines with #
	Replace tab with minimized space(s)

3. sudo nano /etc/mpd.conf.sav
	device "pcm.null"
	mixer_device "ctl.shm"
   sudo nano /usr/share/alsa/alsa.conf
	pcm.null={type=hw;card=0;device=0;subdevice=0;nonblock=1}
