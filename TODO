1. sudo nano /etc/rc.local
	if [ "$(nproc --all)" = "4" ]; then
	 sleep 5
	 taskset -apc 0 `pgrep upmpdcli`
	 MPD_PID=`pgrep -F /run/mpd/pid`
	  if [ "$(($(chrt -ap "$MPD_PID" | wc -l)/2))" != "5" ]; then
	  sleep 5
	  fi
	 taskset -acp 1 "$MPD_PID"
	 taskset -pc  0 $(pstree -np "$MPD_PID" | grep io      | grep -o '[0-9]*' | tail -n1)
	 taskset -pc  3 $(pstree -np "$MPD_PID" | grep player  | grep -o '[0-9]*')
	 taskset -pc  2 $(pstree -np "$MPD_PID" | grep decoder | grep -o '[0-9]*')
	 taskset -pc  3 $(pstree -np "$MPD_PID" | grep output  | grep -o '[0-9]*')
	fi

2. Add sample streams
	sudo nano /var/lib/mpd/playlists/Streams.m3u
		http://50.7.173.162:8010/#Audiophile Baroque
		http://50.7.173.162:8012/#Audiophile Classical
		http://89.16.185.174:8004/stream#Linn Classical
		http://37.130.228.60:8090/#Naim Radio
		http://stream.iradio.fi:8000/klasu-hi.mp3#Rondo Classic - Klasu

3. Ram log
	mount | grep log
	sudo nano /etc/fstab
		tmpfs /var/log tmpfs nosuid,nodev,noatime,nodiratime 0 0

4. Optimize Shairport-sync
	airplay
	(sudo apt-get install psmisc)
	pstree -np shairport-sync
	nano ~/airplay
		if [ "$(nproc --all)" = "4" ]; then
		taskset -apc 0 `pgrep -x shairport-sync`
		taskset -pc  3 $(pstree -np `pgrep -x shairport-sync` | grep xxx | grep -o '[0-9]*')
		...
