1. sudo nano /etc/rc.local

	if [ "$(nproc --all)" = "4" ]; then
	 sleep 5
	 taskset -apc 0 `pgrep upmpdcli`
	 MPD_PID=`pgrep -F /run/mpd/pid`
	  if [ "$(($(chrt -ap "$MPD_PID" | wc -l)/2))" != "5" ]; then
	  sleep 5
	  fi
	 taskset -acp 1 "$MPD_PID"
	 taskset -pc  0 $(pstree -np "$MPD_PID" | grep io      | grep -o '[0-9]*' | tail -n1)
	 taskset -pc  3 $(pstree -np "$MPD_PID" | grep player  | grep -o '[0-9]*')
	 taskset -pc  2 $(pstree -np "$MPD_PID" | grep decoder | grep -o '[0-9]*')
	 taskset -pc  3 $(pstree -np "$MPD_PID" | grep output  | grep -o '[0-9]*')
	fi

2. sudo nano /etc/rc.local (at the end of rc.local)

	 chrt -aip 0     1
	 ionice -c 3 -p  1
	 renice -n 19 -p 1
	 taskset -acp 0  1

3. CPU Governor

	cat /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor
	cat /sys/devices/system/cpu/cpu0/cpufreq/scaling_available_governors
	echo powersave | tee /sys/devices/system/cpu/cpu*/cpufreq/scaling_governor

4. Disable ALSA configurations

	sudo rename -v 's/\.conf$/\.conf.sav/' /usr/share/alsa/*.conf /usr/share/alsa/cards/*.conf /usr/share/alsa/pcm/*.conf /usr/share/alsa/topology/broadwell/*.conf /usr/share/alsa/ucm/apq8064-tabla-snd-card/*.conf /usr/share/alsa/ucm/broadwell-rt286/*.conf /usr/share/alsa/ucm/chtrt5645/*.conf /usr/share/alsa/ucm/DAISY-I2S/*.conf /usr/share/alsa/ucm/GoogleNyan/*.conf /usr/share/alsa/ucm/Manta-I2S/*.conf /usr/share/alsa/ucm/Manta-SPDIF/*.conf /usr/share/alsa/ucm/msm8974-taiko-mtp-snd-card/*.conf /usr/share/alsa/ucm/PandaBoard/*.conf /usr/share/alsa/ucm/PandaBoardES/*.conf /usr/share/alsa/ucm/PAZ00/*.conf /usr/share/alsa/ucm/SDP4430/*.conf /usr/share/alsa/ucm/tegraalc5632/*.conf /usr/share/alsa/ucm/tegra-rt5640/*.conf /usr/share/alsa/ucm/Tuna/*.conf /usr/share/alsa/ucm/VEYRON-I2S/*.conf
	sudo nano /usr/share/alsa/alsa.conf
		...

5. Replaygain in mpd.conf

	sudo nano /etc/mpd.conf
		audio_output {
			replay_gain_handler	"mixer"
		}
