1. alsa.conf

	$ sudo sh -c "printf 'pcm.0.card 0 pcm.0.device 0 pcm.0.subdevice 0 pcm.0.type hw defaults.pcm.minperiodtime 2772\n;' > /usr/share/alsa/alsa.conf.min"

2. mpd.conf

	$ sudo nano /etc/mpd.conf.sav
		#log_file "/dev/null"
		 buffer_before_play "10.5596937298022%"

3. sysctl.conf

	$ sudo nano /etc/sysctl.conf
		kernel.sched_min_granularity_ns=229978
		kernel.sched_wakeup_granularity_ns=388288
		kernel.sched_latency_ns=1394063
		kernel.sched_migration_cost=4899004
		kernel.sched_time_avg=6288
		kernel.sched_shares_window=345997	# only when applicable

4. myMPD

	$ sudo nano /etc/rc.local
		mympd&</dev/null 2>/dev/null # systemctl start mympd

5. config files

	others    ' #'	# at the end without new line (mpd, upmpdcli, mympd, roon, spotifyd)
