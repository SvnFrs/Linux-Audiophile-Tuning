$ sudo cp /etc/mpd.conf.sav /dev/shm/mpd.conf && pkill mpd && sleep 1 && mpd-bg
$ mpc listall | grep -m1 노력 | mpc add && mpc play

1. sudo nano /etc/mpd.conf.sav
	buffer_before_play	"9.99859679869956193454375580937331320004098924264544549%"
	buffer_before_play	"9.9985967986995619345437558093733132000409892426454454967212819323523164430945302943845495294639610860139089946094894525088888890091190440837410390878888061091979011200992011%"
   sudo nano /etc/sysctl.conf
	#kernel.sched_rt_period_us = 1000000		# 999999
	#kernel.sched_rt_runtime_us = 857422		# 851456
	kernel.sched_min_granularity_ns = 229995	# 230000
	kernel.sched_wakeup_granularity_ns = 388368	# 388351
	kernel.sched_latency_ns = 1393278		# 1393268
	kernel.sched_migration_cost = 4899000		# 4899001
	kernel.sched_shares_window = 346004		# 345999
	kernel.sched_time_avg = 6287			# 6289
   sudo nano /etc/hdparm.conf
	 read_ahead_sect = 1240
   sudo nano /etc/mpd.conf.savncmpc
	Replace blank lines with #
	Replace tab with minimized space(s)

2. sudo nano /etc/mpd.conf.sav
	device "pcm.empty"
	mixer_device "ctl.symbols"
   sudo nano /usr/share/alsa/alsa.conf
	pcm.simple={type=hw,card=0,device=0,subdevice=0,nonblock=1}

3. Compile option for libasound and mpd
	export CFLAGS="-O2" ; export CXXFLAGS="-O2" ; export CPPFLAGS="-O2"
