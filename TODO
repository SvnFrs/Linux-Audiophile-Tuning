1. sudo nano /etc/sysctl.conf
	kernel.sched_latency_ns = 1393264
	kernel.sched_rt_period_us = 999999		# ubuntu & raspbian
	kernel.sched_rt_runtime_us = 851456		# ubuntu & raspbian
	kernel.sched_rr_timeslice_ms = 1
	kernel.sched_min_granularity_ns = 230001
	kernel.sched_cfs_bandwidth_slice_us = 1		# ubuntu & armbian

2. sudo nano /etc/mpd.conf
	period_time	"0"