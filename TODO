$ sudo ln -sf /dev/shm/alsa.conf /usr/share/alsa/alsa.conf
$ sudo cp /etc/mpd.conf.sav /dev/shm/mpd.conf && pkill mpd ; sleep 1 ; mpd-bg
$ mpc listall | grep -m1 노력 | mpc add && mpc play $(mpc playlist | wc -l)

