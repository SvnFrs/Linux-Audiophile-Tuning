1. sudo apt-get update ; sudo aptget dist-update

2. sudo nano /usr/share/alsa/alsa.conf
	#ctl.default.type hw
	#ctl.default.card -1

3. dpkg -l pulseaudio
	sudo apt-get purge pulseaudio

4. lspci -nn
	sudo setpci -v -d xxxx:xxxx latency_timer=ff

5. sudo nano /boot/cmdline.txt
	smsc95xx.turbo_mode=N
	
6. cat /sys/devices/system/cpu/cpu0/cpufreq/scaling_available_governors
	sudo nano /etc/rc.local
		echo ondemand > /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor
