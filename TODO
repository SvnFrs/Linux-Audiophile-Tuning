1. sudo nano /etc/rc.local
	 taskset -pc 2	$pgr_mpd
	 ...
	 case $proc in
	   mpd)		taskset -cp 2	$proc_nr
			renice -1 -p	$proc_nr ;;
	   io)		taskset -cp 2	$proc_nr
			renice +1 -p	$proc_nr
			chrt -ip 0	$proc_nr ;;
	   player)	taskset -cp 2	$proc_nr
			renice -2 -p	$proc_nr ;;
	   decoder)	taskset -cp 1	$proc_nr
			renice -3 -p	$proc_nr ;;
	   output)	taskset -cp 3	$proc_nr
			renice -4 -p	$proc_nr
			chrt -op 0	$proc_nr ;;

	taskset -ac 0 nice -n -1 /usr/bin/upmpdcli -c /etc/upmpdcli.conf &
	chrt -i 0 nice -n +1 taskset -ac 0 /usr/bin/polipo &

2. sudo nano /etc/sysctl.conf
	 kernel.sched_rt_runtime_us = 8116658
	#kernel.sched_wakeup_granularity_ns = 3000000
	 kernel.sched_latency_ns = 1800000
	#kernel.sched_migration_cost_ns = 500000
	 kernel.sched_rr_timeslice_ms = 75 		# only for Ubuntu