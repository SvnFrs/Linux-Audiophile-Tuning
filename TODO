1. HTTP Caching through Polipo

$ sudo apt-get --no-install-recommends install polipo
$ sudo systemctl disable polipo.service
$ sudo nano /etc/polipo/config
	#logSyslog = false
	#logFile = /var/log/polipo/polipo.log

	localDocumentRoot = ""
	disableLocalInterface = true 
	disableConfiguration = true 
	disableIndexing = true 
	disableServersList = true 

	cacheIsShared = false
	diskCacheRoot = ""
$ sudo nano /etc/environment or ~/.profile
	http_proxy="http://127.0.0.1:8123/"
$ sudo nano /etc/rc.local
	chrt -i 0 taskset -ac 0 nice -n 4 polipo >/dev/null 2>&1 &
	#
	#until [ $(pgrep -x polipo) -gt 0 ] 2>/dev/null; do
	# sleep 1
	#done
	#sleep 1
	#
	#pgr_polipo=$(pgrep -x polipo)
	#taskset -acp 0 $pgr_polipo
	#renice    3 -p $pgr_polipo
$ sudo reboot
$ export
$ polipo -v

2. sudo nano /etc/rc.local

  mpd|io)	taskset -cp 0 $proc_nr
	 	chrt -v -ip 0 $proc_nr
	 	renice   5 -p $proc_nr ;;