1. sudo nano /etc/rc.local

	For Ubuntu
	 vm.swappiness = 0				# default       60
	 vm.dirty_writeback_centisecs = 0		# default      500
	 vm.memory_failure_recovery = 0			# default        1
	 vm.oom_dump_tasks = 0				# default        1
	 vm.overcommit_memory = 1			# default        0
	 vm.page-cluster = 0				# default        3
	 vm.panic_on_oom = 2				# default        0
	 vm.stat_interval = 3				# default        1
	 vm.vfs_cache_pressure = 0			# default      100

	 kernel.sched_min_granularity_ns = 800000	# default  2250000
	#kernel.sched_wakeup_granularity_ns = 25000	# default  3000000
	#kernel.sched_latency_ns = 1000000		# default 18000000
	 kernel.sched_cfs_bandwidth_slice_us = 50	# default     5000
	 kernel.sched_migration_cost_ns = 500		# default   500000
	 kernel.sched_nr_migrate = 10			# default       32
	 kernel.sched_rr_timeslice_ms = 1		# default	25
	 kernel.sched_shares_window_ns = 1000		# default 10000000
	 kernel.sched_tunable_scaling = 0		# default        1

	For Raspbian
	 vm.swappiness = 0				# default       60
	 vm.dirty_writeback_centisecs = 0		# default      500
	##vm.memory_failure_recovery = 0		# default        1
	 vm.oom_dump_tasks = 0				# default        1
	#vm.overcommit_memory = 1			# default        0
	#vm.page-cluster = 0				# default        3
	 vm.panic_on_oom = 2				# default        0
	 vm.stat_interval = 5				# default        1
	 vm.vfs_cache_pressure = 0			# default      100

	 kernel.sched_min_granularity_ns = 800000	# default  2250000
	#kernel.sched_wakeup_granularity_ns = 25000	# default  3000000
	#kernel.sched_latency_ns = 1000000		# default 18000000
	##kernel.sched_cfs_bandwidth_slice_us = 50	# default     5000
	 kernel.sched_migration_cost_ns = 500		# default   500000
	 kernel.sched_nr_migrate = 10			# default       32
	 kernel.sched_rr_timeslice_ms = 1		# default	10
	 kernel.sched_shares_window_ns = 1000		# default 10000000
	 kernel.sched_tunable_scaling = 0		# default        1