   sudo nano /etc/sysctl.conf
	kernel.sched_min_granularity_ns = 229995	# 230000
	kernel.sched_wakeup_granularity_ns = 388360	# 388351
	kernel.sched_latency_ns = 1393273		# 1393268
	kernel.sched_migration_cost = 4899000		# 4899001
	kernel.sched_shares_window = 346001		# 345999
	kernel.sched_time_avg = 6287			# 6289

	kernel.sched_rt_period_us = 999996		# 999999
	kernel.sched_rt_runtime_us = 857418		# 851456

   sudo nano /etc/hdparm.conf
