	ln -sf /dev/shm/libFLAC.so.8.3.0 /usr/lib/arm-linux-gnueabihf/libFLAC.so

5. sudo nano /etc/rc.local

	musicpd_bg () {
	nohup taskset ... >/dev/null 2>&1
	pkill rc.local
	}
	eol () {
	 until [ $(pgrep -x upmpdcli) -gt 0 ] 2>/dev/null; do
	  sleep 1
	 done
	 sleep 1
	 pkill rc.local		
	}
	musicpd_bg &
	eol &
	/dev/shm/mpd ...

	### Taskset
	#

	for pid in $(sshd) ... ; do
		#chrt -ip 0 $pid
		 renice   2 $pid
	done
