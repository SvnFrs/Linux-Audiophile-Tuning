01. MPD audio buffer
	$ sudo nano /etc/mpd.conf.sav
		audio_buffer_size "3684"
		buffer_before_play "9.999903975%"

02. Shell redirection

	 1</dev/null 2</dev/null 0</dev/null =>  &>   /dev/null  <  /dev/null

	$ sudo nano /etc/rc.local
	$ sudo nano /opt/RoonBridge/Bridge/RoonBridge

	$ sudo sed -i 's/ 1<\/dev\/null 2<\/dev\/null 0<\/dev\/null/  \&>   \/dev\/null  <  \/dev\/null/g' /etc/rc.local /opt/RoonBridge/Bridge/RoonBridge

03. ALSA conf

	$ sudo nano /usr/share/alsa/alsa.conf.{min,mix,plug}
		pcm.hw{type hw card 0 device 0 subdevice 0}

04. hdparm

	$ sudo nano /etc/hdparm.conf
		read_ahead_sect = 1968
	$ sudo hdparm -a1968 /dev/sda

05. More CPU Affinities

	$ sudo nano /etc/rc.local
		#for i in agetty mympd ttyd; do
		# if [ "$procnr" -ge 2 ] && pidof -q $i; then
		#  for j in $(pidof $i); do
		#   taskset -acp $s_task,$h_task,$o_task $j || true
		#  done
		# fi
		#done

	$ sudo nano /etc/rc.local
		[ "$mympd" = on ] && taskset -ac $s_task,$h_task,$o_task /dev/shm/mympd /dev/shm/mympd.conf  &>   /dev/null  <  /dev/null&

