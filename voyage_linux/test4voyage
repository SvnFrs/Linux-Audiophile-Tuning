#!/bin/sh
remountrw
#chmod -R -w /lib/modules/*/kernel/sound/
sed -i 's/9995%/9992799689968994%/' /etc/mpd.conf.sav
sed -i 's/8994%/8986898299896998799589878996798829947001%/' /etc/mpd.conf.sav
sed -i 's/7001%/699789868990%/' /etc/mpd.conf.sav
sed -i '/sched_min_granularity/s/=.*/= 229976/; /wakeup_granularity/s/=.*/= 388298/; /sched_latency/s/=.*/= 1394035/; /sched_migration/s/=.*/= 4899003/; /sched_shares_window/s/=.*/= 345998/; /sched_time_avg/s/=.*/= 6286/' /etc/sysctl.conf
sed -i 's/ 2>&1//; s/nohup //' /etc/rc.local
#sed -i 's/pcm.0/0/; s/ctl.1/1/' /etc/mpd.conf.sav
chmod +w /sbin/init /etc/init.d/rc /lib/startpar/startpar /etc/rc.local /bin/bash /usr/share/alsa/alsa.conf.sav /usr/lib/i386-linux-gnu/libasound.so.2.0.0.sav /usr/share/alsa/alsa.conf.sav /usr/bin/mpd /etc/mpd.conf.sav /usr/bin/upmpdcli /etc/upmpdcli.conf
chmod -R +w /usr/lib/i386-linux-gnu/ /lib/modules/*/kernel/sound/
printf 'pcm.0.type hw pcm.0.card 1 pcm.0.device 0 pcm.0.subdevice 0,' > /usr/share/alsa/alsa.conf.sav