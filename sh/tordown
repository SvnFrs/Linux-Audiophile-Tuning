#!/bin/sh

usage () {
 echo "Usage: $(basename "$0") torrent"
}

dir="/home/parkmino/Downloads"
opt="--dir=$dir --seed-time=0 --enable-dht6=false --disable-ipv6=true"

if [ $# -lt 1 ]; then
 if [ -f $dir/*.torrent ]; then
  for file in $dir/*.torrent; do
   aria2c $opt "$file"
  done
 else
   usage ; exit
 fi
else
 aria2c $opt "$*"
fi
