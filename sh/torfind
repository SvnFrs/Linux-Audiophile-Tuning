#!/bin/sh
echo "\
(1) JTBC 뉴스룸
(2) 이규연의 스포트라이트
(3) 슈퍼밴드
(4) 그것이 알고싶다"
read -p " " i
case $i in
 1) [ $(date +%k) -ge 22 ] && time="today 21:30" || time="yesterday 21:30"
    title="JTBC 뉴스룸" ;;
 2) [ $(date +%u) -eq 4 ] && [ $(date +%k) -ge 23 ] && time="today 22:50" || time="last thursday 22:50"
    title="이규연의 스포트라이트" ;;
 a) time="last friday 23:00"
    title="비긴 어게인 시즌2" ;;
 3) time="last friday 23:00"
    title="슈퍼밴드" ;;
 b) time="last saturday 20:00"
    title="더 팬" ;;
 4) time="last saturday 23:59"
    title="그것이 알고싶다" ;;
 c) time="last sunday 22:30"
    title="썰전" ;;
 *) exit ;;
esac
hour=$((($(date +%s)-$(date +%s -d "$time"))/3600))
[ $hour -le 0 ] && hour=1
echo +googler -t h$hour -n 9 --np "$title $(date +%y%m%d -d "$time") 토렌트"
googler -t h$hour -n 9 --np "$title $(date +%y%m%d -d "$time") 토렌트" | more
