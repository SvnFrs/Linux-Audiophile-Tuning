#!/bin/sh

#prog_0="JTBC 뉴스룸"
#prog_0="보이스 코리아 2020\t\e[36m(금 19:00-21:00)\e[0m"
#prog_0="팬텀싱어3\t\t\e[36m(금 21:00-23:00)\e[0m"
 prog_1="맛있는 녀석들\t\e[36m(금 20:00-21:20)\e[0m"
 prog_2="악인전\t\t\e[36m(토 22:55-00:15)\e[0m"
 prog_3="비긴어게인 코리아\t\e[36m(일 23:00-01:00)\e[0m"
 prog_4="멜론"

nr=1

while true; do
 prog=$(eval echo \"\$prog_$nr\")
 [ -z "$prog" ] && break
 printf "(\e[32m%d\e[0m) %s\n" $nr "$prog"
 nr=$(($nr+1))
done

read -p " " i

case $i in
#0) [ $(date +%k) -ge 22 ] && time="today 21:30" || time="yesterday 21:30" ;;
#0) [ $(date +%u) -eq 5 ] && [ $(date +%k) -ge 22 ] && time="today 21:00" || time="last friday 21:00" ;;
#0) time="last friday 23:00"	;;
 1) [ $(date +%u) -eq 5 ] && [ $(date +%k) -ge 22 ] && time="today 21:20" || time="last friday 21:20" ;;
 2) time="last saturday 23:59"	;;
 3) time="last sunday 23:59"	;;
 4) time="yesterday"		;;
 *) exit			;;
esac

prog=$(eval echo \"\$prog_$i\" | cut -f1)

if [ "$time" = yesterday ]; then
 hour=24
 find="$prog 토렌트"
else
 hour=$((($(date +%s)-$(date +%s -d "$time"))/3600))
 [ $hour -le 0 ] && hour=1
 find="$prog $(date +%y%m%d -d "$time") 토렌트"
fi

cmd="googler --colorize -t h$hour -n 9 --np "$find""
echo ; echo " $cmd"
$cmd | more
