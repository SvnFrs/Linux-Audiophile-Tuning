#!/bin/sh

procnr=$(nproc --all)
if   [ "$procnr" -eq 2 ]; then
 m_task=0; s_task=1; h_task=1; o_task=1
elif [ "$procnr" -eq 4 ]; then
 m_task=2; s_task=0; h_task=3; o_task=1,3
elif [ "$procnr" -ge 8 ]; then
 m_task=6; s_task=4; h_task=2; o_task=1,3,5,7
else
 m_task=0; s_task=0; h_task=0; o_task=0
fi

#taskset -ac $h_task /usr/bin/upmpdcli -D -c /etc/upmpdcli.conf 1</dev/null 2</dev/null 0</dev/null
taskset -ac $s_task,$h_task,$o_task /usr/bin/upmpdcli -D -c /etc/upmpdcli.conf &>/dev/null</dev/null
