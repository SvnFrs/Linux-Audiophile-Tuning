#!/bin/sh

usage () {
 echo "Usage: $(basename "$0") [qq|view]"
 echo "Scrape torrent movies"
}

chk_url () {
 printf "\n%s\n\n" $url
 if ! fping -q $(echo "$url" | cut -d\/ -f3-) 2>&1 && ! wget --spider -q "$url" 2>&1; then
  echo "$url is not connected and exit!"
  exit
 fi
}

chk_movie () {
 if [ -z "$movie" ]; then
  echo "$url"
  echo "Movies are not available and exit"
  [ -e "$tmpfile" ] && rm "$tmpfile"
  exit
 elif [ "$movie" = en-US ]; then
  echo "$url"
  echo "Movies are not valid and exit"
  [ -e "$tmpfile" ] && rm "$tmpfile"
  exit
 else
  printf "%2d.%s\n" $i "$movie"
 fi
}

torwal () {
 url="https://torrentwal.com"
 chk_url
 for i in $(seq 1 10); do
  movie=$(curl -sL -k "$url" | grep -o '영화</a> 인기자료.*' | sed 's/>[0-9]*\. <a href='\''\.\./\n/g' | head -$((i+1)) | tail -1 | cut -d'>' -f2 | cut -d'<' -f1 | sed 's/^[ \t]*//')
  chk_movie
  printf "     \e[34m$url$(curl -sL -k "$url" | grep -o '영화</a> 인기자료.*' | sed 's/>[0-9]*\. *<a href='\''\.\./\n/g' | head -$((i+1)) | tail -1 | cut -d\' -f1)\e[0m\n"
 done
}

torqq () {
 url="https://토렌트큐큐.com"
#url="https://torrentqq35.com"
 chk_url
 [ -z "${url##*큐큐*}" ] && url="$(curl -sL "$url" | grep -o href=.* | cut -d\" -f2 | cut -d\/ -f-3)"
 url="$url/torrent/popular.html?period=d&board=mov"
 tmpfile=$(mktemp)
 curl -sL "$url" | sed 's/title=/\n/g' > "$tmpfile"
 for i in $(seq 1 10); do
  movie=$(head -$((i+1)) "$tmpfile" | tail -1 | cut -d\" -f2)
  chk_movie
  printf "     \e[34m$(grep -o "http[s]://torrentqq[0-9]*.com/torrent/mov/[0-9]*.html" "$tmpfile" | head -$i | tail -1 | cut -d\" -f2)\e[0m\n"
 done
 rm "$tmpfile"
}

torview () {
 url="https://torrentview15.net"
 chk_url
 url="$url/bbs/board.php?bo_table=mov"
 tmpfile=$(mktemp)
 curl -sL "$url" | grep -A 60 '인기 포스트' > "$tmpfile"
 for i in $(seq 1 10); do
  movie=$(grep '</a>' "$tmpfile" | head -$i | tail -1 | sed 's/ <\/a>//')
  chk_movie
  printf "     \e[34m$(grep '<a href=' "$tmpfile" | head -$i | tail -1 | cut -d\" -f2 | sed 's/\&amp;/\&/g')\e[0m\n"
 done
 rm "$tmpfile"
}

case "$1" in
 qq)	torqq	;;
 view)	torview	;;
 *)	torview	;;	# torqq
esac
